.mv {
    width: 100%;
    height: 400rpx;
}

.mv video {
    width: 100%;
    height: 100%;
}

.introduce {
    width: 100%;
    height: auto;
}

.briefDesc {
    font-size: 50rpx;
    padding-left: 15rpx;
    margin-top: 20rpx;
    /* 溢出时隐藏 */
    overflow: hidden;
    /* 文本不进行换行 */
    white-space: nowrap;
    /* 文本超出部分显示省略号 */
    text-overflow: ellipsis;
}

.desc {
    font-size: 35rpx;
    padding-left: 25rpx;
}