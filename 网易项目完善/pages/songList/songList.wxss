/* swiper容器 */
.swiperContainer {
    width: 100%;
    height: 300rpx;
}

/* swiper容器中的图片 */
.swiperContainer image {
    width: 100%;
    height: 100%;
}

/* 歌曲列表样式 */
.musicContainer {
    width: 100%;
    height: 160rpx;
    background-color: rgb(30, 30, 30);
    margin-top: 8rpx;
    display: flex;
}

.left {
    width: 150rpx;
    height: 100%;
    display: flex;
}

/* 调整封面图片大小 */
.left image {
    width: 95%;
    height: 95%;
    margin: auto;
    /* 边框圆角化 */
    border-radius: 10%;
}

.center {
    /* 撑满剩余部分 */
    flex: 1;
    width: 400rpx;
    height: 100%;
    background-color: rgb(30, 30, 30);
    position: relative;
}

/* 歌曲名称的样式 */
.songName {
    color: white;
    font-size: 40rpx;
    /* 设置左内边距 */
    padding-left: 20rpx;
    /* 调节上内边距 */
    padding-top: 25rpx;
    /* 溢出时隐藏 */
    overflow: hidden;
    /* 文本不进行换行 */
    white-space: nowrap;
    /* 文本超出部分显示省略号 */
    text-overflow: ellipsis;
}

/* 歌手和专辑的样式 */
.singerName {
    color: white;
    font-size: 30rpx;
    padding-left: 20rpx;
    padding-top: 20rpx;
    /* 溢出时隐藏 */
    overflow: hidden;
    /* 文本不进行换行 */
    white-space: nowrap;
    /* 文本超出部分显示省略号 */
    text-overflow: ellipsis;
}

/* mv图标的样式 */
.mv {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    right: 0rpx;
    top: 20rpx;
}

.right {
    width: 150rpx;
    height: 100%;
}

/* 播放图标的样式 */
.right image {
    width: 100rpx;
    height: 100rpx;
    margin-left: 30rpx;
    margin-top: 25rpx;
}

/* 搜索框 */
.search-area {
    margin-top: 8rpx;
    width: 100%;
    height: 110rpx;
    /* 弹性盒布局 */
    display: flex;
}

/* 存放输入框的view */
.search-input {
    width: 90%;
    height: 110rpx;
    background-color: lavender;
}

/* 搜索框的样式 */
.search-input input {
    width: 90%;
    height: 106rpx;
    /* 调整内边距 */
    padding-left: 5%;
    padding-right: 5%;
    /* 添加边框 */
    border: #c20c0c solid 2rpx;
}

/* 搜索按钮样式 */
.search-button {
    width: 150rpx;
    height: 110rpx;
    background-color: #c20c0c;
    color: white;
    text-align: center;
    /* 垂直居中设置行高跟高度值保持一致 */
    line-height: 110rpx;
}